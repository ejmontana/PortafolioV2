---
const comingSoonProjects = [
  {
    title: "Sistema de Gestión Empresarial",
    description: "Plataforma integral para gestión de recursos empresariales con módulos de facturación, inventario y CRM.",
    category: "Full Stack",
    technologies: ["React", ".NET", "SQL Server", "SignalR"],
    status: "En desarrollo",
    image: "https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg?auto=compress&cs=tinysrgb&w=800"
  },
  {
    title: "API Gateway Microservicios",
    description: "Gateway centralizado para gestión de microservicios con autenticación JWT y rate limiting.",
    category: "Backend",
    technologies: ["Node.js", "Express", "Redis", "MongoDB"],
    status: "Planificado",
    image: "https://images.pexels.com/photos/1181677/pexels-photo-1181677.jpeg?auto=compress&cs=tinysrgb&w=800"
  },
  {
    title: "Dashboard Analytics",
    description: "Panel de control interactivo con visualizaciones de datos en tiempo real y métricas empresariales.",
    category: "Frontend",
    technologies: ["React", "D3.js", "TailwindCSS", "WebSocket"],
    status: "En diseño",
    image: "https://images.pexels.com/photos/590022/pexels-photo-590022.jpeg?auto=compress&cs=tinysrgb&w=800"
  },
  {
    title: "Infraestructura Cloud",
    description: "Implementación de arquitectura cloud con alta disponibilidad y escalado automático.",
    category: "DevOps",
    technologies: ["AWS", "Docker", "Kubernetes", "Terraform"],
    status: "En investigación",
    image: "https://images.pexels.com/photos/1181677/pexels-photo-1181677.jpeg?auto=compress&cs=tinysrgb&w=800"
  }
];

const categoryColors = {
  "Full Stack": "text-blue-400 border-blue-400",
  "Backend": "text-green-400 border-green-400",
  "Frontend": "text-purple-400 border-purple-400",
  "DevOps": "text-orange-400 border-orange-400"
};

const statusColors = {
  "En desarrollo": "bg-green-500/20 text-green-400",
  "Planificado": "bg-blue-500/20 text-blue-400",
  "En diseño": "bg-purple-500/20 text-purple-400",
  "En investigación": "bg-orange-500/20 text-orange-400"
};
---

<section id="projects" class="py-16 sm:py-24 lg:py-32">
  <div class="container mx-auto px-4 sm:px-6 max-w-7xl">
    <div class="text-center mb-12 sm:mb-16" data-aos="fade-up">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4 sm:mb-6">
        Portafolio de Proyectos
      </h2>
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-amber-500/10 rounded-full">
        <svg class="w-4 h-4 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
        <span class="text-amber-500 font-medium text-sm sm:text-base">Proyectos en desarrollo</span>
      </div>
      <p class="text-gray-400 mt-4 text-sm sm:text-base max-w-2xl mx-auto">
        Estos son algunos de los proyectos en los que estoy trabajando actualmente. 
        Pronto estarán disponibles con documentación completa y demos en vivo.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8">
      {comingSoonProjects.map((project, index) => (
        <div
          class="bg-dark-800 rounded-lg overflow-hidden group hover:transform hover:scale-[1.02] transition-all duration-300 border border-dark-700"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="relative">
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-48 sm:h-64 object-cover"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-dark-800/80 to-transparent"></div>
            <div class="absolute top-3 sm:top-4 right-3 sm:right-4">
              <span class={`px-2 sm:px-3 py-1 rounded-full text-xs sm:text-sm font-medium ${statusColors[project.status]}`}>
                {project.status}
              </span>
            </div>
            <div class="absolute top-3 sm:top-4 left-3 sm:left-4">
              <span class={`px-2 sm:px-3 py-1 rounded-full border text-xs sm:text-sm font-medium ${categoryColors[project.category]}`}>
                {project.category}
              </span>
            </div>
          </div>
          
          <div class="p-4 sm:p-6">
            <h3 class="text-lg sm:text-xl font-bold text-white mb-2 sm:mb-3">
              {project.title}
            </h3>
            <p class="text-gray-300 text-sm sm:text-base mb-4 leading-relaxed">
              {project.description}
            </p>
            
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map((tech) => (
                <span class="bg-dark-700 px-2 sm:px-3 py-1 rounded-full text-xs sm:text-sm text-gray-300">
                  {tech}
                </span>
              ))}
            </div>

            <div class="flex items-center justify-between">
              <div class="flex items-center gap-2 text-gray-400">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-xs sm:text-sm">Próximamente</span>
              </div>
              <button 
                class="text-primary hover:text-primary/80 transition-colors text-sm font-medium cursor-not-allowed opacity-50"
                disabled
              >
                Ver más →
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Call to action -->
    <div class="text-center mt-12 sm:mt-16" data-aos="fade-up">
      <div class="bg-dark-800 p-6 sm:p-8 rounded-lg border border-dark-700">
        <h3 class="text-xl sm:text-2xl font-bold mb-3 sm:mb-4">¿Interesado en colaborar?</h3>
        <p class="text-gray-400 mb-4 sm:mb-6 text-sm sm:text-base">
          Si tienes un proyecto en mente o quieres saber más sobre mi trabajo, 
          no dudes en contactarme.
        </p>
        <a
          href="#contact"
          class="inline-flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 sm:px-8 py-3 rounded-lg transition-colors font-medium text-sm sm:text-base"
        >
          Hablemos
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>