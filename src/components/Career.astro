---

<section id="career" class="py-32 bg-dark-800">
  <div class="container mx-auto px-6 max-w-7xl">
    <h2 class="text-4xl font-bold mb-16 text-center" data-aos="fade-up">
      Trayectoria Profesional
    </h2>

    <div class="grid lg:grid-cols-2 gap-16">
      <!-- Experiencia -->
      <div>
        <h3 class="text-3xl font-bold mb-8 text-primary" data-aos="fade-up">
          Experiencia
        </h3>
        <div class="space-y-8">
          {
            experience.map((job, index) => (
              <div
                class="bg-dark-700 p-8 rounded-lg hover:bg-dark-700/70 transition-colors border-l-4 border-primary"
                data-aos="fade-up"
                data-aos-delay={index * 100}
              >
                <h4 class="text-2xl font-bold text-white mb-3">
                  {job.position}
                </h4>
                <p class="text-gray-400 text-lg mb-4">
                  {job.company} | {job.period}
                </p>
                <p class="text-gray-300 text-lg mb-6">{job.description}</p>
                <ul class="list-disc list-inside text-gray-300 space-y-3">
                  {job.achievements.map((achievement) => (
                    <li class="text-lg">{achievement}</li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Educación -->
      <div>
        <h3 class="text-3xl font-bold mb-8 text-primary" data-aos="fade-up">
          Educación
        </h3>
        <div class="space-y-8">
          {
            education.map((item, index) => (
              <div
                class="bg-dark-700 p-8 rounded-lg hover:bg-dark-700/70 transition-colors border-l-4 border-secondary"
                data-aos="fade-up"
                data-aos-delay={index * 100}
              >
                <h4 class="text-2xl font-bold text-white mb-3">{item.title}</h4>
                <p class="text-gray-400 text-lg mb-4">
                  {item.institution} | {item.period}
                </p>
                <p class="text-gray-300 text-lg">{item.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
