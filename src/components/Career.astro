---
const education = [
  {
    title: "Ingeniería en Informática",
    institution: "Universidad Ejemplo",
    period: "2018 - 2022",
    description: "Especialización en desarrollo de software y sistemas distribuidos."
  },
  {
    title: "Certificación en Desarrollo Web Full Stack",
    institution: "Academia Tech",
    period: "2021",
    description: "Formación intensiva en tecnologías web modernas."
  },
  {
    title: "Máster en Desarrollo de Aplicaciones Web",
    institution: "Instituto Tech Avanzado",
    period: "2022 - 2023",
    description: "Especialización en arquitecturas web modernas y mejores prácticas."
  }
];

const experience = [
  {
    position: "Desarrollador Web Senior",
    company: "Tech Solutions Inc.",
    period: "2021 - Presente",
    description: "Desarrollo de aplicaciones web escalables utilizando React, Node.js y AWS.",
    achievements: [
      "Lideré un equipo de 5 desarrolladores",
      "Reduje el tiempo de carga de la aplicación en un 40%",
      "Implementé CI/CD con GitHub Actions"
    ]
  },
  {
    position: "Desarrollador Frontend",
    company: "Digital Agency",
    period: "2019 - 2021",
    description: "Desarrollo de interfaces de usuario responsivas y accesibles.",
    achievements: [
      "Desarrollé más de 20 sitios web para clientes",
      "Implementé sistemas de diseño reutilizables",
      "Mejoré la accesibilidad de todos los proyectos"
    ]
  }
];
---

<section id="career" class="py-32 bg-dark-800">
  <div class="container mx-auto px-6 max-w-7xl">
    <h2 class="text-4xl font-bold mb-16 text-center" data-aos="fade-up">
      Trayectoria Profesional
    </h2>

    <div class="grid lg:grid-cols-2 gap-16">
      <!-- Experiencia -->
      <div>
        <h3 class="text-3xl font-bold mb-8 text-primary" data-aos="fade-up">Experiencia</h3>
        <div class="space-y-8">
          {experience.map((job, index) => (
            <div 
              class="bg-dark-700 p-8 rounded-lg hover:bg-dark-700/70 transition-colors border-l-4 border-primary"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <h4 class="text-2xl font-bold text-white mb-3">{job.position}</h4>
              <p class="text-gray-400 text-lg mb-4">{job.company} | {job.period}</p>
              <p class="text-gray-300 text-lg mb-6">{job.description}</p>
              <ul class="list-disc list-inside text-gray-300 space-y-3">
                {job.achievements.map(achievement => (
                  <li class="text-lg">{achievement}</li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>

      <!-- Educación -->
      <div>
        <h3 class="text-3xl font-bold mb-8 text-primary" data-aos="fade-up">Educación</h3>
        <div class="space-y-8">
          {education.map((item, index) => (
            <div 
              class="bg-dark-700 p-8 rounded-lg hover:bg-dark-700/70 transition-colors border-l-4 border-secondary"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <h4 class="text-2xl font-bold text-white mb-3">{item.title}</h4>
              <p class="text-gray-400 text-lg mb-4">{item.institution} | {item.period}</p>
              <p class="text-gray-300 text-lg">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>