---
const education = [
  {
    title: "Ingeniería en Informática",
    institution: "Universidad Ejemplo",
    period: "2018 - 2022",
    description: "Especialización en desarrollo de software y sistemas distribuidos."
  },
  {
    title: "Certificación en Desarrollo Web Full Stack",
    institution: "Academia Tech",
    period: "2021",
    description: "Formación intensiva en tecnologías web modernas."
  },
  {
    title: "Máster en Desarrollo de Aplicaciones Web",
    institution: "Instituto Tech Avanzado",
    period: "2022 - 2023",
    description: "Especialización en arquitecturas web modernas y mejores prácticas."
  }
];
---

<section id="education" class="py-32">
  <div class="container mx-auto px-6 max-w-7xl">
    <h2 class="text-4xl font-bold mb-16 text-center" data-aos="fade-up">
      Educación
    </h2>
    <div class="max-w-4xl mx-auto">
      <div class="space-y-8">
        {education.map((item, index) => (
          <div 
            class="bg-dark-800 p-8 rounded-lg border border-dark-700 hover:border-primary/50 transition-colors"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <h3 class="text-2xl font-bold text-primary mb-3">{item.title}</h3>
            <p class="text-gray-400 text-lg mb-4">{item.institution} | {item.period}</p>
            <p class="text-gray-300 text-lg">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>