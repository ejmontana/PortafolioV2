---
const experience = [
  {
    position: "Desarrollador Web Senior",
    company: "Tech Solutions Inc.",
    period: "2021 - Presente",
    description: "Desarrollo de aplicaciones web escalables utilizando React, Node.js y AWS.",
    achievements: [
      "Lideré un equipo de 5 desarrolladores",
      "Reduje el tiempo de carga de la aplicación en un 40%",
      "Implementé CI/CD con GitHub Actions"
    ]
  },
  {
    position: "Desarrollador Frontend",
    company: "Digital Agency",
    period: "2019 - 2021",
    description: "Desarrollo de interfaces de usuario responsivas y accesibles.",
    achievements: [
      "Desarrollé más de 20 sitios web para clientes",
      "Implementé sistemas de diseño reutilizables",
      "Mejoré la accesibilidad de todos los proyectos"
    ]
  }
];
---

<section id="experience" class="py-32 bg-dark-800">
  <div class="container mx-auto px-6 max-w-7xl">
    <h2 class="text-4xl font-bold mb-16 text-center" data-aos="fade-up">
      Experiencia Profesional
    </h2>
    <div class="max-w-4xl mx-auto">
      <div class="space-y-12">
        {experience.map((job, index) => (
          <div 
            class="bg-dark-700 p-8 rounded-lg hover:bg-dark-700/70 transition-colors"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <h3 class="text-2xl font-bold text-primary mb-3">{job.position}</h3>
            <p class="text-gray-400 text-lg mb-4">{job.company} | {job.period}</p>
            <p class="text-gray-300 text-lg mb-6">{job.description}</p>
            <ul class="list-disc list-inside text-gray-300 space-y-3">
              {job.achievements.map(achievement => (
                <li class="text-lg">{achievement}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>